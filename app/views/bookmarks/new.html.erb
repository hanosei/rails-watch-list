<h1>Add a Movie to <%= @list.name %></h1>

<%= form_with model: @bookmark, url: list_bookmarks_path(@list), local: true do |form| %>
  <div>
    <%= form.label :movie_id, 'Choose a movie:' %>
    <%= form.collection_select :movie_id, Movie.all, :id, :title %>
  </div>
  <div>
    <%= form.label :comment, 'Your comment:' %>
    <%= form.text_area :comment %>
  </div>
  <div>
    <%= form.submit 'Add Bookmark' %>
  </div>
<% end %>
